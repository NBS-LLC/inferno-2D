{
  "name": "inferno-2d-shareware",
  "version": "1.0.0",
  "description": "A 2D Platformer Tribute to 90s Descent",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/ coverage/",
    "format": "prettier . --check",
    "lint": "eslint .",
    "compile": "tsc --noEmit",
    "test": "jest --runInBand --coverage --verbose",
    "build": "npm-run-all clean format lint compile test --print-label",
    "coverage": "chrome coverage/lcov-report/index.html",
    "watch": "webpack --watch",
    "serve": "webpack-dev-server",
    "start": "npm-run-all build --parallel watch serve --print-label"
  },
  "author": "Nick Derevjanik",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@geckos.io/phaser-on-nodejs": "^1.2.9",
    "@jest/globals": "^29.7.0",
    "canvas": "^2.11.2",
    "eslint": "^8.57.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "phaser3spectorjs": "^0.0.8",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.6.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "phaser": "^3.86.0"
  }
}
