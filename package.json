{
  "name": "inferno-2d-shareware",
  "version": "1.0.0",
  "description": "A 2D Platformer Tribute to 90s Descent",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier . --check",
    "lint": "eslint .",
    "compile": "tsc --noEmit",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "build": "npm-run-all clean format lint compile test --print-label",
    "watch": "webpack --watch",
    "serve": "webpack-dev-server",
    "start": "npm-run-all build --parallel watch serve --print-label"
  },
  "author": "Nick Derevjanik",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/chai": "^4.3.14",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.6",
    "chai": "^4.4.1",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.57.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.0",
    "mocha": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-loader": "^9.5.1",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.6.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "phaser": "^3.80.1"
  }
}
